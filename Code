#include <SoftwareSerial.h>
SoftwareSerial BTSerial (4,5);
char caracter;
String msg;
int first_num;
int second_num;
int third_num;
long random_num_long;
int random_num_int;
String val;
void setup() {
  pinMode(6, OUTPUT); 
  pinMode(7, INPUT); 
  Serial.begin(9600);
  Serial.println("AT Commands");
  BTSerial.begin(9600);
}

void loop() {
  random_num_long=random(300);
  
  random_num_int=get_Sensor_val();
  if(random_num_int>300){
    random_num_int=300;
  }
  val=String(random_num_int);
  Serial.println(val);
  if(random_num_int>99){
    BTSerial.write(val.charAt(0));
    BTSerial.write(val.charAt(0));
    BTSerial.write(val.charAt(1));
    BTSerial.write(val.charAt(2));
    delay(1500);
  }else if(random_num_int>9){
    BTSerial.write(val.charAt(0));
    BTSerial.write(val.charAt(0));
    BTSerial.write(val.charAt(1));
    delay(800);
  }else{
    BTSerial.write(val.charAt(0));
    BTSerial.write(val.charAt(0));
    delay(700);
  }
}

int get_Sensor_val(){
  digitalWrite(6, LOW);
  delayMicroseconds(2);
  digitalWrite(6, HIGH);
  delayMicroseconds(10);
  digitalWrite(6, LOW);
  return pulseIn(7, HIGH)* 0.034 / 2;
}
